doctype html
html
  head
    title Add Calorie Entry
  body
    h1 Enter Calorie Details

    //- Form for entering calorie data
    form(action="/addcalories" method="POST")
      div
        label(for="user_id") User ID:
        input(type="text" name="user_id" placeholder="Enter user ID" required)

      div
        label(for="year") Year:
        input(type="number" name="year" placeholder="Enter year" required)

      div
        label(for="month") Month:
        input(type="number" name="month" placeholder="Enter month" required)

      div
        label(for="day") Day:
        input(type="number" name="day" placeholder="Enter day" required)

      div
        label(for="description") Description:
        input(type="text" name="description" placeholder="Enter description" required)

      div
        label(for="category") Category:
        select(name="category" required)
          option(value="breakfast") Breakfast
          option(value="lunch") Lunch
          option(value="dinner") Dinner
          option(value="other") Other

      div
        label(for="amount") Amount (kcal):
        input(type="number" name="amount" step="0.01" placeholder="Enter calories" required)

      div
        button(type="submit") Submit Entry
